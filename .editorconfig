root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.nix]
indent_size = 2

[*.rs]
indent_size = 4

[{*.json,*.yml,*.yaml,*.toml}]
indent_size = 2

[{*.html,*.css,*.js}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 2

